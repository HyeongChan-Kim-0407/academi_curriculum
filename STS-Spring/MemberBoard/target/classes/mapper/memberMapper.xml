<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="khc.memberBoard.dao.MemberDao">
	
	<insert id="insertMember">
		INSERT INTO MEMBER(MID,MPW,MNAME,MJOINDATE,MSTATE)
		VALUES (#{mid},#{mpw},#{mname},DEFAULT,DEFAULT)
	</insert>
	
	<select id="selectMemberByMidAndMpw" resultType="khc.memberBoard.dto.Member">
		SELECT * FROM MEMBER WHERE MID = #{mid} AND MPW = #{mpw}
	</select>
	
	<select id="selectMemberByMid" resultType = "khc.memberBoard.dto.Member">
		SELECT * FROM MEMBER WHERE MID = #{mid}
	</select>
	
</mapper>