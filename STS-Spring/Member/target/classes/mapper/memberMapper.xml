<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member.khc.dao.MemberDao">
  
  <select id="selectMember" resultType="member.khc.dto.Member">
    SELECT * FROM MEMBER
  </select>
  
  <insert id="insertMember">
  <!-- # : 문자로 삽입, $ : 값을 그대로 삽입 -->
  	INSERT INTO MEMBER(MID,MPW,MNAME,MBIRTH)
  	VALUES (#{mid},#{mpw},#{mname},#{mbirth})
  </insert>
  
  <select id="selectMemberByMidAndMpw" resultType="member.khc.dto.Member">
  	SELECT * FROM MEMBER WHERE MID = #{mid} AND MPW = #{mpw}
  </select>
  
  <select id="selectMemberByMid" resultType="member.khc.dto.Member">
  	SELECT MID, MPW, MNAME, TO_CHAR(MBIRTH, 'YYYY-MM-DD') AS MBIRTH FROM MEMBER WHERE MID = #{mid}
  </select>
  
  <delete id="deleteMember">
  	DELETE FROM MEMBER WHERE MID = #{mid}
  </delete>
  
  <update id = "updateMember">
  	UPDATE MEMBER SET MPW = #{mpw}, MNAME = #{mname}, MBIRTH = #{mbirth}
  	WHERE MID = #{mid}
  </update>
  
</mapper>